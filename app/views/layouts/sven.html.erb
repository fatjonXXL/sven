<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN" "http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
	<head>
		<title>svenMS<%= ": #{yield :title}" if yield :title %></title>
		<%= stylesheet_link_tag 'sven' %>
		<meta http-equiv="content-type" content="text/html; charset=utf-8" />
	</head>
	<body>
		<div id="header">
			<div id="left-part">
			<% if current_user %>
				<ul class="menu">
					<li>
						<%= link_to "<span class=\"rounder\">DASHBOARD</span>", admin_url %>
						<ul>
							<li><%= link_to "SOUBOROVÝ MANAŽER", admin_url, icon( :folder_explore ) %></li>
						</ul>
					</li>
				<% if current_user.has_permission?( "edit_content" ) %>
					<li>
						<%= link_to "<span class=\"rounder\">STRÁNKY</span>", admin_pages_url %>
						<ul>
							<li><%= link_to "MENU", admin_menus_url, icon( :script ) %></li>
							<li><%= link_to "KOŠ", admin_page_trash_url, icon( :cross ) %></li>
						</ul>
					</li>
					<li>
						<%= link_to "<span class=\"rounder\">VZHLEDY</span>", admin_layouts_url %>
					</li>
					<li>
						<%= link_to "<span class=\"rounder\">ŠABLONY</span>", admin_templates_url %>
					</li>
				<% end %>
				<% if current_user.has_permission?( "manage_users" ) %>
					<li>
						<%= link_to "<span class=\"rounder\">UŽIVATELÉ</span>", admin_users_url %>
					</li>
				<% end %>
				<% if current_user.has_permission?( "manage_plugins" ) %>
					<li>
						<%= link_to "<span class=\"rounder\">PLUGINY</span>", admin_plugins_url %>
					</li>
				<% end %>
				<% if current_user.has_permission?( "manage_options" ) %>
					<li>
						<%= link_to "<span class=\"rounder\">NASTAVENÍ</span>", admin_options_url %>
					</li>
				<% end %>
				</ul>
			<% end %>
			</div>
			<div id="right-part">
				<ul>
					<li><%= link_to '<span class="rounder" id="view-site">zobrazit stránky</span>'.downcase, ( @page ? @page.url : '/' ), { :onclick => 'window.open(this.href);' } %></li>
					<% if current_user %>
					<li><%= link_to '<span>můj profil</span>'.downcase, edit_admin_user_url(current_user) %></li>
					<li><%= link_to '<span>odhlásit</span>'.downcase, admin_logout_url %></li>
					<% end %>
				</ul>
			</div>
			<div id="title">svenMS<%= ": #{yield :title}" if yield :title %></div>
			<div class="cleaner"></div>
		</div>
		<div id="content">
			<% unless flash.blank? %>
			<% klass = (flash[:notice].blank?) ? "error" : "notice" %>
			<div id="flash" class="<%= klass %>">
				<%= flash[:notice] || flash[:error] %>
			</div>
			<% end %>
			<h1><%= yield :title %></h1>
			<%= yield %>
		</div>
		
		<%= javascript_include_tag '/fckeditor/fckeditor.js' %>
		<%= javascript_include_tag :defaults, :cache => true %>
		<% if @page %>
		<script type="text/javascript" charset="utf-8">
		window.addEvent('load', function () {
			myTabs = new SlidingTabs('tabs', 'panes');
			window.addEvent('resize', myTabs.recalcWidths.bind(myTabs));
		});
		</script>
		<% end %>
	</body>
</html>