<% content_for :title do %>
	<%= @user == current_user ? "Můj profil" : "Editace uživatele \"#{@user.login}\"" %>
<% end %>

<% form_for :user, @user, :url => admin_user_url( @user ), :html => { :method => :put } do |f| %>
  <%= f.error_messages %>
  <%= render :partial => "form", :object => f %>
  <%= f.submit "upravit" %>, <%= link_to "změnit heslo"%> nebo <%= link_to "zpět", :back %>
<% end %>