<% form_for @user_session, :url => admin_user_session_path do |f| %>
<%= f.error_messages %>
<table>
	<tr>
		<td>Uživatel:</td>
		<td><%= f.text_field :login %></td>
	</tr>
	<tr>
		<td>Heslo:</td>
		<td><%= f.password_field :password %></td>
	</tr>
	<tr>
		<td colspan="2"><%= f.check_box :remember_me %> Pamatuj si mne</td>
	</tr>
	<tr>
		<td class="small" colspan="2"><%= submit_tag "přihlásit" %></td>
	</tr>
</table>
<% end %>